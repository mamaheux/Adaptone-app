{{aa-page-header title=(t 'probe-positions.title')}}

<div class="map">
  {{#if this.firstSymmetrySelected}}
    {{aa-positions-map positions=this.positions.firstSymmetryPositions}}
  {{else}}
    {{aa-positions-map positions=this.positions.secondSymmetryPositions}}
  {{/if}}
</div>

<div class="symmetry-wrapper">
  <div class="symmetry-title">{{t 'probe-positions.symmetry-title'}}</div>
  {{aa-toggle
    leftValue=(t 'probe-positions.first-symmetry')
    rightValue=(t 'probe-positions.second-symmetry')
    isActive=this.firstSymmetrySelected
  }}
</div>

<div class="buttons-wrapper">
  <button
    class="button rerun-initialization-button"
    onClick={{action "rerunInitialization"}}
  >
    {{inline-svg "assets/images/replay-icon.svg" class="replay-icon"}}
    {{t 'probe-positions.rerun'}}
  </button>

  <button
    class="button confirm-button"
    onClick={{action "confirmPositions"}}
  >
    {{t 'probe-positions.confirm'}}
    {{inline-svg "assets/images/arrow-icon.svg" class="arrow-icon"}}
  </button>
</div>
