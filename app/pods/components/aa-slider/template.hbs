{{ui-slider
  value=value
  min=min
  max=max
  step=this.step
  orientation='vertical'
  tooltip='hide'
  disabled=false
  reversed=true
  focus=false
  naturalArrowKeys=false
  immediateResponse=true
  changed=this.onSliderChange
}}

{{#if showValue}}
  <div class="value-container">
    <div class="value-text">
      {{valueTitle}}
    </div>
    <div class="value-separator"></div>
    <div class="value-text">{{value}}</div>
  </div>
{{/if}}
