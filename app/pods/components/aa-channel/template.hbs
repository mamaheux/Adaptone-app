<div class="channel">
  <div class="name">
    <div class="input">{{this.name}}</div>
    <div class="details">
      {{#link-to "channel-details" (query-params channelId=this.channelId)}}
        ...
      {{/link-to}}
    </div>
  </div>

  <div class="meter-container">
    {{aa-slider
      min=0
      value=this.volume
      max=100
      onSliderChange=this.onChannelVolumeChange
      step=1
    }}

    {{aa-peak-meter
      min=0
      max=100
      yellowLimit=65
      redLimit=85
      value=this.volume
      class="peak-meter"
    }}
  </div>

  <div class="button-container">
    {{aa-toggle-button
      class="toggle-button"
      isActive=this.isMuted
      text="M"
      onButtonClick=this.onChannelMuteChange
    }}
    {{aa-toggle-button
      class="toggle-button"
      isActive=this.isSolo
      text="S"
      onButtonClick=this.onChannelSoloChange
    }}
  </div>
</div>
