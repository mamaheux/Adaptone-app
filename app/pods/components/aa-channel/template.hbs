<div class="channel">
  <div class="name">
    <div class="input">{{this.channel.data.channelName}}</div>
    <div class="details">
      {{#link-to "channel-details" (query-params channel=this.stringifiedChannel)}}
        ...
      {{/link-to}}
    </div>
  </div>

  <div class="meter-container">
    {{aa-slider
      min=0
      value=this.channel.data.volume
      max=100
      step=1
    }}

    {{aa-peak-meter
      min=0
      max=100
      yellowLimit=65
      redLimit=85
      class="peak-meter"
    }}
  </div>

  <div class="button-container">
    {{aa-toggle-button
      class="toggle-button"
      isActive=this.channel.data.isMuted
      text="M"
      onButtonClick=this.onChannelMuteChange
    }}
    {{aa-toggle-button
      class="toggle-button"
      isActive=this.channel.data.isSolo
      text="S"
      onButtonClick=this.onChannelSoloChange
    }}
  </div>
</div>
