<img class="config-list-logo" src="assets/images/adaptone_logo.svg">

<h1>
  {{t 'config-list.title'}}
</h1>

<div class="configuration-list">
  <div class="list-elements">
    {{#each configurations as |config|}}
      {{aa-config
        config=config
        removeConfig=(action "removeConfig" config.id)
        selectConfig=(action "selectConfig" config)
      }}
    {{/each}}
  </div>

  <div class="bottom-shadow"></div>
  <div class="top-shadow"></div>
</div>

<button {{action "addConfig"}} class="new-config">
  <span class="button-text">{{t 'config-list.new'}}</span>
  {{inline-svg "assets/images/plus-icon.svg" class="plus-icon"}}
</button>
